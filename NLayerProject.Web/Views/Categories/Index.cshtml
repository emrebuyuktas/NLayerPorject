
<h1>Categories</h1>
<a class="btn btn-primary mb-2" asp-action="Create">Add a new category</a>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Id</th>

            <th>Name</th>

            <th>Transactions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>
                    @category.Id
                </td>
                <td>
                    @category.Name
                </td>
                <td>
                    <a asp-controller="categories" asp-action="Update" asp-route-categoryId="@category.Id" class="btn btn-primary">Update</a>
                    <a asp-action="Delete" class="btn btn-primary" asp-route-id="@category.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
